<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>
        <mapping class="com.se.database.dao.model.users.UserVO"/>
        <mapping class="com.se.database.dao.model.users.PersonVO"/>
        <mapping class="com.se.database.dao.model.users.StudentVO"/>
        <mapping class="com.se.database.dao.model.users.ProfessorVO"/>
        <mapping class="com.se.database.dao.model.academic.groups.DepartmentVO"/>
        <mapping class="com.se.database.dao.model.academic.groups.StudentGroupVO"/>
        <mapping class="com.se.database.dao.model.academic.course.EvaluationVO"/>
        <mapping class="com.se.database.dao.model.academic.course.OptionalCourseVO"/>

        <mapping class="com.se.database.dao.model.academic.course.activities.ActivityVO"/>
        <mapping class="com.se.database.dao.model.academic.course.CourseVO"/>
        <mapping class="com.se.database.dao.model.academic.faculty.DegreeVO"/>
        <mapping class="com.se.database.dao.model.academic.faculty.FacultyVO"/>
    </session-factory>
</hibernate-configuration>